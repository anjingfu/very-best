<div class="col-md-6">
  <div class="card">
    <table class="table table-striped table-hover">
      <tr>
        <th>The very best...</th>
        <th>is at...</th>
        <th> </th>
      </tr>

      <% @dishes.each do |dish| %>
      <tr>
        <td>
        <a href="/dishes/<%= dish.id %>">
          <%= dish.name  %>
        </a>
        </td>
        <td style="white-space: nowrap">
          <% if Bookmark.where({:dish_id => dish.id}).present? %>
            <a href="/venues/<%= Venue.find(dish.id).id %>">
              <%= Venue.find(dish.id).name %>
            </a> 
          <% else %>
            <form action="/create_bookmark" method="post">
              <select name="venue_id" id="venue_id" class="form-control form-control-sm mr-sm-1"><option value="">Choose a venue...</option>
              <% Venue.all.order(:name).each do |venue| %>
              <option value="venue.id"><%=venue.name%></option>
              <% end %></select>
              <button class="btn btn-primary btn-sm">
                <i class="fa fa-heart"></i>
              </button>
            </form>
          <% end %>
        </td>
        <td class="text-right">
         <span class="badge badge-primary">
          <% if dish.cuisine.present? %>
              <%= dish.cuisine.name %>
          <% end %>
          </span>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @dishes, theme: 'twitter-bootstrap-4' %>
    <div class="card-footer text-center">
        
    </div>
  </div>
